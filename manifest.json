{
  "manifest_version": 3,
  "name": "ChatGPT Typing Sounds",
  "version": "1.0",
  "description": "משמיע צלילי הקלדה כשהמודל של ChatGPT עונה",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
} 